<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/fab_scrollview_fragment_sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/fab_scrollview_fragment_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></LinearLayout>

    </ScrollView>

    <com.zpauly.materialcomponents.buttons.FloatingActionButton
        android:id="@+id/fab_scrollview_fragment_fab"
        android:layout_margin="16dp"
        android:layout_gravity="bottom|end"
        app:inner_image="@drawable/ic_add_24dp"
        app:button_color="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</FrameLayout>